# Database Configuration
DATABASE_URL=sqlite:///./data/networkmapper.db

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-please-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOW_ORIGINS=http://localhost:3000

# Scanning Configuration
DEFAULT_SCAN_TIMEOUT=300
MAX_CONCURRENT_SCANS=3

# Network Scanner Settings
ENABLE_ARP_SCAN=true
ENABLE_ICMP_SCAN=true
ENABLE_NMAP_DISCOVERY=true

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
